<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="top"
    tools:context=".ui.home.HomeFragment">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="114dp"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="314dp"
            android:layout_height="114dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="314dp"
                android:layout_height="54dp"
                android:background="@color/mainColor"
                android:backgroundTint="@color/mainColor"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins_extrabold"
                    android:paddingTop="20dp"
                    android:paddingLeft="20dp"
                    android:text="GETHELP"
                    android:textColor="@color/white"
                    android:textSize="18dp"
                    android:textStyle="bold" />

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginLeft="170dp"
                    android:layout_marginTop="25dp"

                    android:src="@drawable/ic_notification" />



            </LinearLayout>
            <LinearLayout
                android:layout_width="314dp"
                android:layout_height="60dp"
                android:background="@color/mainColor"
                android:backgroundTint="@color/mainColor"
                android:orientation="horizontal">


                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:cardCornerRadius="8dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginBottom="25dp">
                    <androidx.appcompat.widget.SearchView
                        android:layout_width="270dp"
                        android:layout_height="30dp"
                        android:layout_gravity="center"
                        android:background="@color/white"
                        app:queryHint="What help do you need?"
                        app:theme="@style/AppSearchView"
                        android:scaleType="centerCrop"
                        >
                    </androidx.appcompat.widget.SearchView>
                </androidx.cardview.widget.CardView>
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="100dp"
            android:layout_height="114dp"
            android:orientation="horizontal"
            android:background="@color/mainColor"
            android:backgroundTint="@color/mainColor">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/profilePic"
                android:onClick="buttonClick"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginLeft="12dp"
                android:layout_gravity="right|center"
                android:src="@drawable/pablo" />

        </LinearLayout>


<!--View Model Text View for Home-->
        <TextView
        android:id="@+id/text_home"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        />



    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">
        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:stretchColumns="1">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
        <!--    Beginning of 1st row category images-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="12dp"
                android:orientation="horizontal"
                android:paddingLeft="50dp"
                android:paddingRight="50dp"
                android:paddingTop="20dp"
                android:weightSum="4">


                <ImageButton
                    android:id="@+id/houseworkButton"
                    android:onClick="buttonClick"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_marginLeft="12dp"
                    android:layout_weight="1"
                    android:scaleType="centerInside"
                    android:adjustViewBounds="true"
                    android:background="@color/iconColor"
                    android:padding="10dp"
                    android:src="@drawable/ic_household" />


                <ImageButton
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_marginLeft="12dp"
                    android:layout_weight="1"
                    android:scaleType="centerInside"
                    android:adjustViewBounds="true"
                    android:background="@color/iconColor"
                    android:padding="10dp"
                    android:src="@drawable/ic_childcare" />

                <ImageButton
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_marginLeft="12dp"
                    android:layout_weight="1"
                    android:scaleType="centerInside"
                    android:adjustViewBounds="true"
                    android:background="@color/iconColor"
                    android:padding="10dp"
                    android:src="@drawable/ic_machinery" />

                <ImageButton
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_marginLeft="12dp"
                    android:layout_weight="1"
                    android:scaleType="centerInside"
                    android:adjustViewBounds="true"
                    android:background="@color/iconColor"
                    android:padding="10dp"
                    android:src="@drawable/ic_strength" />


            </LinearLayout>
        <!--    End of 1st row category images-->
        <!--    Beginning of 1st row category title-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="12dp"
                android:orientation="horizontal"
                android:paddingLeft="50dp"
                android:paddingRight="50dp"
                android:weightSum="4">

                <TextView
                    android:layout_width="44dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="12dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="Housework"
                    android:textSize="9dp" />
                <TextView
                    android:layout_width="44dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="12dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="Childcare"
                    android:textSize="9dp" />
                <TextView
                    android:layout_width="44dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="12dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="Machinery"
                    android:textSize="9dp" />

                <TextView
                    android:layout_width="44dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="12dp"
                    android:layout_weight="1"
                    android:fontFamily="@font/poppins"
                    android:gravity="center"
                    android:text="Strength"
                    android:textSize="9dp" />

            </LinearLayout>
        <!--    End of 1st row category titles-->
        <!--    Beginning of 2nd row category images-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="12dp"
                    android:orientation="horizontal"
                    android:paddingLeft="50dp"
                    android:paddingRight="50dp"
                    android:weightSum="4">


                    <ImageButton
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:layout_marginLeft="12dp"
                        android:layout_weight="1"
                        android:scaleType="centerInside"
                        android:adjustViewBounds="true"
                        android:background="@color/iconColor"
                        android:padding="10dp"
                        android:src="@drawable/ic_games" />


                    <ImageButton
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:layout_marginLeft="12dp"
                        android:layout_weight="1"
                        android:scaleType="centerInside"
                        android:adjustViewBounds="true"
                        android:background="@color/iconColor"
                        android:padding="10dp"
                        android:src="@drawable/ic_education" />

                    <ImageButton
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:layout_marginLeft="12dp"
                        android:layout_weight="1"
                        android:scaleType="centerInside"
                        android:adjustViewBounds="true"
                        android:background="@color/iconColor"
                        android:padding="10dp"
                        android:src="@drawable/ic_transport" />

                    <ImageButton
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:layout_marginLeft="12dp"
                        android:layout_weight="1"
                        android:scaleType="centerInside"
                        android:adjustViewBounds="true"
                        android:background="@color/iconColor"
                        android:padding="15dp"
                        android:src="@drawable/ic_others" />


                </LinearLayout>
                <!--    End of 2st row category images-->
                <!--    Beginning of 2st row category title-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="12dp"
                    android:orientation="horizontal"
                    android:paddingLeft="50dp"
                    android:paddingRight="50dp"
                    android:weightSum="4">

                    <TextView
                        android:layout_width="44dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="12dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="Games"
                        android:textSize="9dp" />
                    <TextView
                        android:layout_width="44dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="12dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="Education"
                        android:textSize="9dp" />
                    <TextView
                        android:layout_width="44dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="12dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="Transport"
                        android:textSize="9dp" />
                    <TextView
                        android:layout_width="44dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="12dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="Others"
                        android:textSize="9dp" />

                </LinearLayout>
        <!--End of 2nd row category title-->
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_margin="20dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ongoing Orders"
                    android:textStyle="bold"
                    android:textSize="12dp"/>
            </LinearLayout>

        <!--    ongoing orders card-->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:elevation="6dp"
                app:cardCornerRadius="5dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingStart="15dp"
                    android:paddingEnd="15dp"
                    android:paddingTop="12dp"
                    android:paddingBottom="12dp">

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/pablo2"
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:layout_gravity="center"
                        android:src="@drawable/pablo" />

                    <LinearLayout
                        android:layout_width="190dp"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_gravity="center"
                        android:layout_marginStart="16dp">

                        <TextView
                            android:id="@+id/tvOngoingName"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/poppins_medium"
                            android:text="Ashli"
                            android:textColor="@color/black"
                            android:textSize="17dp" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="@color/lightStroke"/>
                        <TextView
                            android:id="@+id/tvStatus"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="STATUS"
                            android:textColor="@color/black"
                            android:textSize="10dp" />

                        <TextView
                            android:id="@+id/tvStatusDesc"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Cleaning up your room.."
                            android:textColor="@color/black"
                            android:textSize="10dp" />

                        <View
                            android:layout_width="wrap_content"
                            android:layout_height="5dp" />

                        <androidx.cardview.widget.CardView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="right"
                            app:cardCornerRadius="10dp">



                        </androidx.cardview.widget.CardView>

                    </LinearLayout>
                    <View
                        android:layout_width="1dp"
                        android:layout_height="80dp"
                        android:background="@color/lightStroke"/>

        <!--            Container status description & estimated time-->
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">


                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="on
                                 progress"
                                android:textStyle="bold"
                                android:textSize="11dp"
                                android:paddingLeft="8dp"
                                android:paddingTop="15dp"/>


                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="13:30 - 15:30"
                                android:textSize="8dp"
                                android:paddingTop="3dp"
                                android:paddingLeft="8dp"/>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rate your orders!"
                android:textStyle="bold"
                android:textSize="12dp"
                android:layout_margin="20dp"/>

            <!--  rate your orders card-->

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:elevation="6dp"
                app:cardCornerRadius="5dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingStart="15dp"
                    android:paddingTop="12dp"
                    android:paddingEnd="15dp"
                    android:paddingBottom="12dp">

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/pablo"
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:layout_gravity="center"
                        android:src="@drawable/pablo" />

                    <LinearLayout
                        android:layout_width="190dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginStart="16dp"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tvName"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/poppins_medium"
                            android:text="Ashli"
                            android:textColor="@color/black"
                            android:textSize="17dp" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="@color/lightStroke" />

                        <TextView
                            android:id="@+id/tvSkills"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Cleaning, Gardening, Cooking"
                            android:textColor="@color/black"
                            android:textSize="10dp" />

                        <TextView
                            android:id="@+id/starRating"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="STARS REPLACE LATER"
                            android:textColor="@color/black"
                            android:textSize="10dp" />

                        <View
                            android:layout_width="wrap_content"
                            android:layout_height="5dp" />

                        <androidx.cardview.widget.CardView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="right"
                            app:cardCornerRadius="10dp">


                        </androidx.cardview.widget.CardView>


                    </LinearLayout>

                    <View
                        android:layout_width="1dp"
                        android:layout_height="80dp"
                        android:background="@color/lightStroke" />

                    <!--            Container status description & estimated time-->
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">


                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:paddingLeft="7dp"
                                android:paddingTop="15dp"
                                android:text="Order
                                Completed"
                                android:textSize="10dp"
                                android:textStyle="bold" />


                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:paddingLeft="7dp"
                                android:paddingTop="3dp"
                                android:text="29 Oct, 12:39"
                                android:textSize="8dp" />
                        </LinearLayout>
                    </LinearLayout>



                </LinearLayout>


             </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:elevation="6dp"
                    app:cardCornerRadius="5dp">
                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="80dp"
                        android:backgroundTint="@color/lightPurple"
                        android:layout_marginTop="5dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginBottom="10dp"
                        android:layout_marginRight="20dp">
                        <EditText
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:hint="How was your experience? Any feedbacks?"
                            android:textSize="8dp"
                            android:layout_margin="10dp"
                            android:background="@android:color/transparent">

                        </EditText>

                    </androidx.cardview.widget.CardView>

                </androidx.cardview.widget.CardView>

            <View
                android:layout_height="100dp"
                android:layout_width="match_parent"></View>
        </TableLayout>
    </ScrollView>
</TableLayout>